module Graphics.Rendering.Chart.Simple.Histogram (simpleHist) where

import Graphics.Rendering.Chart.Simple
import Graphics.Rendering.Chart.Plot.Histogram

chart values = layout
        where hist = defaultPlotHist { plot_hist_values_ = values
                                     , plot_hist_range_ = Just (max values, min values)
                                     }
              layout = layout1_title ^= "Hello World"
                     $ layout1_plots ^= [Left (plotHist hist)]
                     $ defaultLayout1
              
simpleHist :: FilePath -> [Double] -> IO ()
